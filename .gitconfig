[push]
    default = matching
[alias]
    ad = add -u
    st = status
    df = diff
    df2 = diff HEAD~
    df3 = diff HEAD~~
    co = checkout
    ci = commit
    br = branch
    graph = log --graph --date=short --decorate=short --pretty=format:'%Cgreen%h %Creset%cd %Cblue%cn %Cred%d %Creset%s'
    df-word = diff --word-diff
[core]
    excludesfile = ~/.gitignore
    editor = vim -c \"set fenc=utf-8\"
